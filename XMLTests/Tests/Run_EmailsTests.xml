<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" [ <!ENTITY lt "&#60;"> <!ENTITY gt "&#62;"> <!ENTITY quot "&#34;"> <!ENTITY amp "&#38;">]>
<suite name="Emails tests" parallel="false" thread-count="1">
  	<listeners>
    	<listener class-name="core.util.MyTestListener" />
  	</listeners>
  	<parameter name="bpath" value="*firefox"></parameter>//*iexplore*firefox
  	
  	<parameter name="USED_ENVIRONMENT" value="UAT"></parameter>
  	<parameter name="USED_SERVER" value="LOCAL"></parameter>
  	<parameter name="sendEmail.From"  value="info@salsalabs.com"></parameter>
   	
  	<test verbose="2" name="Send emails for Manually" annotations="JDK" >		
		<parameter name="sendEmail.OpenAmount"  value="8"></parameter>
		<parameter name="sendEmail.ClickAmount"  value="4"></parameter>
		<parameter name="sendEmail.emailOfSupporter"  value="supMan"></parameter>
     	<groups>
    		<run>
     			 <include name="email.*"/>
    		</run>
  		</groups>
     	<classes>
      		<class name="tests.EmailBlastTest"/>
    	</classes>
  	</test>   
  	<test verbose="2" name="Send emails for Imported" annotations="JDK" >		
		<parameter name="sendEmail.OpenAmount"  value="16"></parameter>
		<parameter name="sendEmail.ClickAmount"  value="9"></parameter>
		<parameter name="sendEmail.emailOfSupporter"  value=""></parameter>
     	<groups>
    		<run>
     			 <include name="email.*"/>
    		</run>
  		</groups>
     	<classes>
      		<class name="tests.EmailBlastTest"/>
    	</classes>
  	</test> 
 </suite>